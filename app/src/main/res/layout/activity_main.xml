<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.swaraj.bloodbook.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="189dp"
        android:layout_height="23dp"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="@android:color/black"
        android:text="A LifeShare System"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="177dp"
        android:layout_height="159dp"
        app:srcCompat="@drawable/blood_book_logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="47dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
        app:fabSize="mini"
        app:rippleColor="@color/colorblack"
        app:srcCompat="@drawable/floating"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="44dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="222dp"
        android:layout_height="38dp"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="@android:color/black"
        android:text="BloodBook"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/help"
        app:layout_constraintRight_toRightOf="@+id/help"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451"
        app:rippleColor="@color/colorblack"
        app:srcCompat="@drawable/bank_icon"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
        app:fabSize="mini"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/bank"
        app:layout_constraintRight_toRightOf="@+id/about"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="@color/colorblack"
        app:srcCompat="@drawable/user_icon"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/help"
        app:layout_constraintTop_toTopOf="@+id/bank" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="129dp"
        android:clickable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
        app:fabSize="mini"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@color/colorblack"
        app:srcCompat="@drawable/help_icon"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/float_menu"
        app:layout_constraintTop_toTopOf="@+id/bank" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/about"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="64dp"
        android:clickable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
        app:fabSize="mini"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/help"
        app:layout_constraintRight_toRightOf="@+id/float_menu"
        app:rippleColor="@color/colorblack"
        app:srcCompat="@drawable/about_icon"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/float_menu"
        app:layout_constraintTop_toTopOf="@+id/help" />

    <TextView
        android:id="@+id/abouttxt"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="About Us"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/float_menu"
        app:layout_constraintLeft_toLeftOf="@+id/helptxt"
        app:layout_constraintRight_toRightOf="@+id/helptxt"
        app:layout_constraintTop_toTopOf="@+id/about"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/helptxt"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Help"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/abouttxt"
        app:layout_constraintLeft_toLeftOf="@+id/usertxt"
        app:layout_constraintRight_toRightOf="@+id/title"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/usertxt"
        android:layout_width="83dp"
        android:layout_height="28dp"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="User "
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/help"
        app:layout_constraintRight_toLeftOf="@+id/user"
        app:layout_constraintTop_toTopOf="@+id/banktxt"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="29dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="232dp" />

    <TextView
        android:id="@+id/banktxt"
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:layout_marginStart="1dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Blood Bank"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/usertxt"
        app:layout_constraintRight_toLeftOf="@+id/float_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteX="230dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
